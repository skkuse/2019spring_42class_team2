<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddPostActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/NoActionBarColor">
        <TextView
            android:text="Add Post"
            android:textSize="25dp"
            android:textStyle="normal"
            android:textColor="@color/White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.Toolbar>

    <ProgressBar
        android:id="@+id/setUpProgressBar"
        android:visibility="invisible"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageViewId"
        android:layout_margin="8dp"
        android:src="@drawable/memories"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <EditText
        android:id="@+id/postTitleET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_edit_text"
        android:drawableLeft="@drawable/ic_description_black_24dp"
        android:hint="Enter Title..."
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="128"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/Black" />

    <EditText
        android:id="@+id/postPriceET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_edit_text"
        android:drawableLeft="@drawable/ic_description_black_24dp"
        android:hint="Enter Price..."
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="128"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/Black" />

    <EditText
        android:id="@+id/postDescriptionET"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="text"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:maxLength="128"
        android:background="@drawable/rounded_edit_text"
        android:padding="10dp"
        android:hint="Enter Description..."
        android:drawableLeft="@drawable/ic_description_black_24dp"
        android:textColor="@color/Black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="80dp"
            android:layout_height="29dp"
            android:gravity="center"
            android:text="SIZE: "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/postDepthET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Depth"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/postHeightET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Height"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/postWidthET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Width"
            android:inputType="textPersonName" />

    </LinearLayout>

    <Button
        android:id="@+id/addPostBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/colorAccent"
        android:text="Upload Post"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="20sp" />

</LinearLayout>